generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum MatchStatus {
  UPCOMING
  ONGOING
  FINISHED
}

enum MatchTypes {
  PRESEASON
  SEMIFINAL
  FINAL
}

enum TournamentStatus {
  UPCOMING
  LIVE
  FINISHED
}

enum Role {
  ADMIN
  EDITOR
  MEMBER
}

model User {
  id          Int          @id @default(autoincrement())
  name        String
  email       String       @unique
  password    String
  role        Role
  createdAt   DateTime     @default(now())
  predictions Prediction[]
}

model Tournament {
  id        Int              @id @default(autoincrement())
  name      String
  logo      String
  status    TournamentStatus @default(UPCOMING)
  startDate DateTime
  endDate   DateTime?
  createdAt DateTime         @default(now())
  matches   Match[]
  points    PointTable[]
  teams     Team[]
  clubs     Club[]
}

model Club {
  id   Int    @id @default(autoincrement())
  name String
  logo String

  tournamentId Int
  tournament   Tournament @relation(fields: [tournamentId], references: [id])

  teams Team[]
}

model Team {
  id   Int    @id @default(autoincrement())
  name String

  clubId Int
  club   Club @relation(fields: [clubId], references: [id])

  tournamentId Int
  tournament   Tournament @relation(fields: [tournamentId], references: [id])

  players Player[]
  points  PointTable?

  matchesAsTeamA Match[] @relation("TeamA_Matches")
  matchesAsTeamB Match[] @relation("TeamB_Matches")

  createdAt DateTime @default(now())
}

model Player {
  id         Int      @id @default(autoincrement())
  name       String
  profileImg String
  tier       Int
  teamId     Int
  team       Team     @relation(fields: [teamId], references: [id])
  createdAt  DateTime @default(now())
}

model Match {
  id Int @id @default(autoincrement())

  tournamentId Int
  tournament   Tournament @relation(fields: [tournamentId], references: [id])

  status    MatchStatus @default(UPCOMING)
  matchType MatchTypes  @default(PRESEASON)

  scheduledAt DateTime

  teamAId Int
  teamBId Int

  teamA Team @relation("TeamA_Matches", fields: [teamAId], references: [id])
  teamB Team @relation("TeamB_Matches", fields: [teamBId], references: [id])

  scoreA Int?
  scoreB Int?

  startedAt DateTime?
  endedAt   DateTime?

  createdAt   DateTime     @default(now())
  predictions Prediction[]

  @@index([teamAId])
  @@index([teamBId])
  @@index([tournamentId])
}

model PointTable {
  id Int @id @default(autoincrement())

  tournamentId Int
  tournament   Tournament @relation(fields: [tournamentId], references: [id])

  teamId Int  @unique
  team   Team @relation(fields: [teamId], references: [id])

  played      Int @default(0)
  won         Int @default(0)
  draw        Int @default(0)
  lost        Int @default(0)
  points      Int @default(0)
  totalGoals  Int @default(0)
  goalFor     Int @default(0)
  goalAgainst Int @default(0)
  goalDiff    Int @default(0)

  @@unique([teamId, tournamentId])
}

enum PREDICTIONRESULT {
  EXACT
  WINNER
  DRAW
  WRONG
}

model Prediction {
  id     Int  @id @default(autoincrement())
  userId Int
  user   User @relation(fields: [userId], references: [id])

  matchId       Int
  match         Match @relation(fields: [matchId], references: [id])
  predictScoreA Int?
  predictScoreB Int?
  point         Int   @default(0)

  isLocked Boolean @default(false)

  result PREDICTIONRESULT?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, matchId])
  @@index([matchId])
  @@index([userId])
}
